<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog title="Events">
		<ScrollContainer height="300px" width="35em" vertical="true" focusable="true">
			<Table items="{DOB>/events}">
				<columns>
					<Column >
						<Text text="Event Id"/>
					</Column>
					<Column >
						<Text text="Employee Image"/>
					</Column>
					<Column>
						<Text text="Event Name"/>
					</Column>
					<Column>
						<Text text="Name"/>
					</Column>
					<Column width="8em">
						<Text text="Date Of Birth"/>
					</Column>
					<Column>
						<Text text="Add"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Inactive">
						<cells>
							<Label text="{DOB>eventId}"/>
							<Avatar src="{DOB>image}" displaySize="S" showBorder="true"/>
							<Label text="{DOB>event}"/>
							<Label text="{DOB>name}"/>
							<DatePicker value="{DOB>date}" editable="false"/>
							<Button text="Add to event" press="onClickEventsAdd"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
		<endButton>
			<Button type="Reject" text="Close" press="onCloseFragmentAddEvents"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>