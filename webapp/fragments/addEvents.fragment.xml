<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog title="Relieving Employees" id="RelievingEmployeListFragment">
		<ScrollContainer height="300px" width="30em" vertical="true" focusable="true">
			<Table items="{DOB>/events}">
				<columns>
					<Column >
						<Text text="Employee Image"/>
					</Column>
					<Column>
						<Text text="Event Name"/>
					</Column>
					<Column>
						<Text text="Name"/>
					</Column>
					<Column width="8em">
						<Text text="Date Of Birth"/>
					</Column>
					<Column>
						<Text text="Add"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Inactive">
						<cells>
							<Avatar src="{DOB>image}" displaySize="S" showBorder="true"/>
							<Label text="{DOB>event}"/>
							<Label text="{DOB>empName}"/>
							<DatePicker value="{DOB>startDate}" editable="false"/>
							<Button text="delete" press="onClickdeleteEvent"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</ScrollContainer>
	</Dialog>
</core:FragmentDefinition>