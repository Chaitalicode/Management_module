<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt">
	<Dialog showHeader="false">
		<tnt:ToolHeader>
			<ToolbarSpacer/>
			<Text text="Leave Action"/>
			<ToolbarSpacer/>
		</tnt:ToolHeader>
		<f:SimpleForm>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<VBox>
						<Label text="Employee Id:" design="Bold"/>
						<Input value="{DOB>/LeaveAction/0/empId}" enabled="false"/>
						<Label text="Reason:" design="Bold"/>
						<Input value="{DOB>/LeaveAction/0/Reason}" enabled="false"/>
						<Label text="From date:" design="Bold"/>
						<Input value="{DOB>/LeaveAction/0/Fdate}" enabled="false"/>
						<Label text="To date:" design="Bold"/>
						<Input value="{DOB>/LeaveAction/0/Tdate}" enabled="false"/>
					</VBox>
				</l:content>
			</l:VerticalLayout>
		</f:SimpleForm>
		<buttons>
			<!--<beginButton>-->
			<Button type="Accept" text="Approve" press="onClickLeaveApprival"/>
			<!--</beginButton>-->
			<!--<endButton>-->
			<Button type="Reject" text="Reject" press="onClickLeaveReject"/>
			<Button text="close" type="Reject" press="onCloseFragmentLeaveAction"/>
			<!--</endButton>-->
		</buttons>
	</Dialog>
</core:FragmentDefinition>